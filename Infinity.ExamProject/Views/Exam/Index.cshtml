@model List<ListExamDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sınav Listesi</div>
					</div>
					<div class="card-body">
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Sınav Adı</th>
									<th scope="col">Sorular</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.CategoryName</td>
										<td>@item.ExamName</td>
										<td><a href="/QuestionOptions/Index/@item.ExamId" class="btn btn btn-outline-primary">Tüm Sorular</a></td>
										<td><a href="/Exam/DeleteExam/@item.ExamId/" class="btn btn btn-outline-danger">Sil</a></td>
										<td><a href="/Exam/UpdateExam/@item.ExamId/" class="btn btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Exam/CreateExam/" class="btn btn-outline-primary">Yeni Sınav Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
